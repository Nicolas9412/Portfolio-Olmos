{
  "extends": ["./node_modules/standard/eslintrc.json", "next/core-web-vitals"],
  "rules": {
    "semi": [2, "always"],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always", // <==================
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
